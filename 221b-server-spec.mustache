%define name {{name}}
%define release {{release}}
%define buildroot %(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)
%define username 221b-server
%{?systemd_requires}
BuildRequires: systemd

Name: %{name}
Version: %{version}
{{#dist}}
%define dist {{dist}}
Release: %{release}.%{?dist}
{{/dist}}
{{^dist}}
Release: %{release}
{{/dist}}
Summary: {{name}}

License: {{license}}
Source: %{name}.tar.gz
BuildRoot: %{buildroot}
{{#noarch}}
BuildArch: noarch
%global __strip /bin/true
%define __spec_build_post true
{{/noarch}}
Requires: nodejs{{#nodeVersion}} {{{nodeVersion}}}{{/nodeVersion}}
{{#requires}}
Requires: {{.}}
{{/requires}}
{{#buildRequires}}
BuildRequires: {{.}}
{{/buildRequires}}
AutoReqProv: no

%description
{{description}}

%prep
%setup -q -c -n %{name}

%build
{{#buildCommands}}
{{.}}
{{/buildCommands}}
{{#prune}}
npm prune --production
{{/prune}}
{{#noarch}}
# skip npm rebuild
{{/noarch}}
{{^noarch}}
npm rebuild
{{/noarch}}

%pre
getent group %{username} >/dev/null || groupadd -r %{username}
getent passwd %{username} >/dev/null || useradd -r -g %{username} -G %{username} -d {{installDir}} -s /sbin/nologin %{username}

%install
mkdir -p %{buildroot}%{_unitdir}
mv 221b-server.service %{buildroot}%{_unitdir}
mkdir -p %{buildroot}{{installDir}}
cp -r ./* %{buildroot}{{installDir}}

%post
{{#postInstallCommands}}
{{.}}
{{/postInstallCommands}}
%systemd_post %{username}.service

%preun
%systemd_preun %{username}.service

%postun
%systemd_postun_with_restart %{username}.service
userdel %{username}

%clean
rm -rf %{buildroot}

%files
%exclude {{installDir}}/rpmbuild
%exclude {{installDir}}/package.json
%exclude {{installDir}}/package-lock.json
%exclude {{installDir}}/221b-server-spec.mustache
%{_unitdir}/221b-server.service
%license 221b.license
%defattr(644, 221b-server, 221b-server, 755)
{{installDir}}
{{#hasExecutableFiles}}
%defattr(755, 221b-server, 221b-server, 755)
{{#executableFiles}}
{{.}}
{{/executableFiles}}
{{/hasExecutableFiles}}
